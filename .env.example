# Server Configuration
PORT=5000
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_NAME=sak_whatsapp_api

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Stripe Payment Gateway (Get from https://stripe.com)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Pricing Plan IDs (Create in Stripe Dashboard)
STRIPE_PRICE_FREE=price_free
STRIPE_PRICE_STARTER=price_starter_15
STRIPE_PRICE_PRO=price_pro_49
STRIPE_PRICE_ENTERPRISE=price_enterprise_199

# Email Configuration (for user notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@sakwhatsapp.com
EMAIL_FROM_NAME=SAK WhatsApp API

# Application URLs
APP_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000
DASHBOARD_URL=http://localhost:3000/dashboard

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Session Storage
WHATSAPP_SESSIONS_PATH=./whatsapp_sessions

# Webhook Configuration
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_TIMEOUT_MS=5000

# Redis (Optional - for caching and queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Admin Credentials (First user)
ADMIN_EMAIL=admin@sakwhatsapp.com
ADMIN_PASSWORD=ChangeThisPassword123!

# Feature Flags
ENABLE_STRIPE=true
ENABLE_WEBHOOKS=true
ENABLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=true

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Security
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
COOKIE_SECRET=your-cookie-secret-key
